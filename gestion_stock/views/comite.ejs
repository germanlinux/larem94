<% include partial_hdp %>
<div id="page-wrapper">
                      <!-- /.col-lg-12 -->
         <div class="row">
            <div class="col-lg-12">
                    <h1 class="page-header">Gestion d'un comité </h1>
           </div>
         </div>

          <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                            Comité <%= libelle %>
                </div>
                <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <form role="form" METHOD="POST">

                                        <div class="form-group">
                                            <label>Nom du comité</label>
                                            <input class="form-control"  name="libelle" value="<%= libelle %>">
                                        </div>

                                </div>

                                <div class="col-lg-4">
                                       <div class="form-group">
                                            <label>Dépôt de rattachement</label>
                                            <select name="depot" class="form-control">
                                                <% for (var i=0; i < depots.length ; i++) {%>
                                                <option <% if (depots[i].nom == id_depot) { %>  selected <% } %> ><%= depots[i].nom %>  </option>
                                                <% } %>
                                               </select>

                                      </div>

                                </div>
                                <div class="row">
                                    <div class="col-lg-3">&nbsp;
                                        </div>
                                    <div class="col-lg-6">
                                        <button type="submit" class="btn btn-default">Enregister</button>
                                    </div>
                                </div>
                            </div>
                            </form>
                </div>
            </div>
        </div>
</div> <!-- row -->
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="../vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="../vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="../vendor/metisMenu/metisMenu.min.js"></script>

    <!-- Morris Charts JavaScript -->
    <script src="../vendor/raphael/raphael.min.js"></script>
    <script src="../vendor/morrisjs/morris.min.js"></script>
    <script src="../data/morris-data.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="../dist/js/sb-admin-2.js"></script>

</body>

</html>
