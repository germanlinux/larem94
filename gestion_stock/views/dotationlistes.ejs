<% include partial_hdp %>

<div id="page-wrapper" >
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Liste des dotations</h1>
                </div>
            </div>
           
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default" >
                        <div class="panel-heading">
                            Les dotations
                        </div>
                        <div class="panel-body">
                            <!--  boucle comites -->
                            <div class="row" >
                                <div class="col-lg-12">
                                        
                                   <div class="table-responsive" >
                                      <table class="table table-striped table-bordered">
                                         <thead>
                                             <tr>
                                                 <th>
                                                     Dépôt
                                                 </th>
                                                 <th>
                                                     Produit
                                                 </th>
                                                 <th>
                                                     famille  
                                                 </th>
                                                 <th>
                                                     Date  
                                                 </th>
                                                 <th>
                                                     Quant. initiale  
                                                 </th><th>
                                                     Action
                                                 </th>
                                             </tr>
                                         </thead>
                                        
                                       <tbody>
                                           
                                            <% lignes.forEach(function(li) { %>
                                        <tr>
                                            <td><%= li.depot%></td>
                                            <td><%= li.libelle%></td>
                                            <td><%= li.famille%></td>
                                            <td><%= li.datedotation%></td>
                                            <td><%= li.quantite_initiale%></td>
                                            <td><a href= "/une_dotation/<%=li.id_dotation%>" ><i class="fa fa-pencil-square-o" /></a></td>
                                        </tr>
                                         <% }); %>
                                   
                                          
                                           
                                        </tbody>   
                                       </table>
                                       
                                    
                                    
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
             </div>
                       
    </div>
</div>
    
 <% include pied %>
</body>

</html>
